<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.syun.and.whiteoutmaze.activites.MainActivity">

    <com.syun.and.whiteoutmaze.views.GameView
        android:id="@+id/gameView"
        app:layout_constraintDimensionRatio="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp" />

    <TextView
        android:id="@+id/stageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/gameView" />

    <ImageView
        android:id="@+id/upArrowKeyImageView"
        android:layout_width="@dimen/size_arrow_key"
        android:layout_height="@dimen/size_arrow_key"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stageTextView"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/leftArrowKeyImageView"
        android:layout_width="@dimen/size_arrow_key"
        android:layout_height="@dimen/size_arrow_key"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toStartOf="@+id/upArrowKeyImageView"
        app:layout_constraintTop_toBottomOf="@+id/upArrowKeyImageView" />

    <ImageView
        android:id="@+id/rightArrowKeyImageView"
        android:layout_width="@dimen/size_arrow_key"
        android:layout_height="@dimen/size_arrow_key"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/upArrowKeyImageView"
        app:layout_constraintStart_toEndOf="@+id/upArrowKeyImageView"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/downArrowKeyImageView"
        android:layout_width="@dimen/size_arrow_key"
        android:layout_height="@dimen/size_arrow_key"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/leftArrowKeyImageView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="0dp" />

</android.support.constraint.ConstraintLayout>
